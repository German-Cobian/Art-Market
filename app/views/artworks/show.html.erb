<div class="border border-dark rounded mt-3 mx-5 py-5 px-5">
 
    <div class="d-flex flex-column justify-content-start mb-5">
      <div class="d-flex flex-column align-items-center">
        <p><strong class="fSz-lg"><%= @artwork.title %></strong></p>
      
        <div class="row mb-3 w-75">
          <% if @artwork.image.attached? %>
            <%= image_tag @artwork.image.variant(:large)  %>
          <% end %>
        </div>
     
        <div>
          <%= @artwork.artist %>
        </div>
        <div>
          <%= @artwork.country %>
        </div>
        <div class="d-flex flex-row justify-content-start">
          <p class="text-secondary"><%= @artwork.date %></p>
          <p class="text-secondary">, <%= @artwork.medium %></p>
          <p class="text-secondary">, <%= @artwork.dimensions %></p>
        </div>
      </div>

        <div class="d-flex flex-row justify-content-start my-3">
          <%= @artwork.description %>
        </div>
        <div class="d-flex flex-row justify-content-start">
          <strong class="me-3">Price:</strong>$<%= @artwork.price %>
        </div>
    
    </div>
</div>

<div class="mt-3 mb-5 ms-5">
  <%= link_to "Galleries listing", galleries_path, class: 'link-style' %>
</div>