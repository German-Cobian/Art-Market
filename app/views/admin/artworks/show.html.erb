<div class="border border-dark rounded mt-3 mx-5">
  <div class="my-5 mx-5">
    <div class="d-flex flex-column justify-content-start mb-5">
      <div class="d-flex flex-row justify-content-center">
        <p><strong><%= @admin_artwork.title %></strong></p>
      </div>
      <div class="d-flex flex-row justify-content-center">
        <%= @admin_artwork.description %>
        <%= @admin_artwork.artist %>
        <%= @admin_artwork.artwork_type %>
        <%= @admin_artwork.medium %>
        <%= @admin_artwork.dimensions %>
        <%= @admin_artwork.date %>
        <%= @admin_artwork.country %>
        <%= @admin_artwork.style %>
        <%= @admin_artwork.price %>
      </div>
    </div>

    <div class="d-flex flex-row justify-content-end mb-3">
      <%= button_to "Elimina este Elemento", admin_artwork_path(@admin_artwork.id), method: :delete, class: 'btn btn-outline-danger py-0' %>
    </div>
    <div class="d-flex flex-row mb-3">
      <%= link_to "Edita este Elemento", edit_admin_artwork_path(@admin_artwork)%>
    </div>
  </div>
</div>

<div class="mt-3 ms-5">
  <%= link_to "Listado de Albumes", admin_galleries_path, class: '' %>
</div>