<div class="border border-dark rounded mt-3 mx-5 py-5 px-5">
 
    <div class="d-flex flex-column justify-content-start mb-5">
      <div class="d-flex flex-column align-items-center">
        <p><strong class="fSz-lg"><%= @admin_artwork.title %></strong></p>
      
        <div class="row mb-3 w-75">
          <% if @admin_artwork.image.attached? %>
            <%= image_tag @admin_artwork.image.variant(:large)  %>
          <% end %>
        </div>
     
        <div>
          <%= @admin_artwork.artist %>
        </div>
        <div>
          <%= @admin_artwork.country %>
        </div>
        <div class="d-flex flex-row justify-content-start">
          <p class="text-secondary"><%= @admin_artwork.date %></p>
          <p class="text-secondary">, <%= @admin_artwork.medium %></p>
          <p class="text-secondary">, <%= @admin_artwork.dimensions %></p>
        </div>
      </div>

        <div class="d-flex flex-row justify-content-start my-3">
          <%= @admin_artwork.description %>
        </div>
        <div class="d-flex flex-row justify-content-start">
          <strong class="me-3">Price:</strong>$<%= @admin_artwork.price %>
        </div>
    
    </div>

    <div class="d-flex flex-row mb-3">
      <%= link_to "Edit this Artwork", edit_admin_artwork_path(@admin_artwork), class: 'link-style'%>
    </div>
    <div class="d-flex flex-row justify-content-end mb-3">
      <%= button_to "Delete this Artwork", admin_artwork_path(@admin_artwork.id), method: :delete, class: 'btn btn-outline-danger py-0' %>
    </div>
   
 
</div>

<div class="mt-3 mb-5 ms-5">
  <%= link_to "Galleries listing", admin_galleries_path, class: 'link-style' %>
</div>