<div class="mt-3 ms-5">
  <%= link_to "<<", admin_galleries_path, class: 'link-style' %>
</div>

<h3 class="mt-3 ms-5">Edit this Gallery</h3>

<%= form_with(model: [:admin, @admin_gallery]) do |form| %>
  <% if @admin_gallery.errors.any? %>
    <div style="color: red" class="ms-5">
      <h6><%= pluralize(@admin_gallery.errors.count, "error") %> has impeded this gallery from being saved:</h6>

      <ul>
        <% @admin_gallery.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="border border-danger rounded mx-5 py-5 px-5">

    <div class="mb-3">
      <b><%= form.label "Title:", class: "form-label" %></b><br />
      <%= form.text_field :topic, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <b><%= form.label "Description:", class: "form-label" %></b><br />
      <%= form.text_area :description, size: "100x4", class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <b><%= form.label "Imagene:", class: "form-label" %></b><br />
      <%= form.file_field :image, class: "form-control form-control-sm" %>
    </div>

    <div class="d-flex flex-row justify-content-end mt-3">
      <%= form.submit "Edit this Gallery", class: 'btn btn-outline-primary py-0' %>
    </div>
  </div>
<% end %>

<div class="mt-3 ms-5">
  <%= link_to "Show this Gallery", admin_gallery_path(@admin_gallery.id), class: 'link-style' %>
</div>
