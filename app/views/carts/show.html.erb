<div class="mt-3 ms-5">
  <%= link_to "<<", galleries_path, class: "link-style" %>
</div>

<h3 class="mt-3 ms-5">Cart</h3>
<div id="errorContainer"></div>
<div data-controller="cart" class="border border-danger rounded my-3 mx-5 py-5 px-5">
  <div class="" id="total"></div>
  <div class="d-flex flex-row justify-content-end mt-3">
    <button data-action="click->cart#checkout" class="btn btn-outline-primary py-0 me-5" >Proceed to Checkout</button> |
    <button data-action="click->cart#clear" class="btn btn-outline-danger py-0 ms-5" >Empty Cart</button>
  </div>
</div>
